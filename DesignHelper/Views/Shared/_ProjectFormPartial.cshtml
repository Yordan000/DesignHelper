@model ProjectAddViewModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            @*<input type="hidden" asp-for="@Model.Id" />*@
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" placeholder="Title...">
                <span asp-validation-for="Title" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author"></label>
                <input asp-for="Author" class="form-control" placeholder="Author...">
                <span asp-validation-for="Author" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location"></label>
                <input asp-for="Location" class="form-control" placeholder="Location...">
                <span asp-validation-for="Location" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Area"></label>
                <input asp-for="Area" class="form-control" placeholder="Area...">
                <span asp-validation-for="Area" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="4" class="form-control" placeholder="The architecture of the project..."></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating"></label>
                <input asp-for="Rating" class="form-control" placeholder="Rating...">
                <span asp-validation-for="Rating" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Your fine URL here...">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control">
                    @foreach (var category in Model.ProjectCategories)
                    {
                            <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwardId"></label>
                <select asp-for="AwardId" class="form-control">
                    @foreach (var award in Model.ProjectAwards)
                    {
                                <option value="@award.Id">@award.Name</option>
                    }
                </select>
                <span asp-validation-for="AwardId" class="small text-danger"></span>
            </div>
            <label class="form-label">Tools used</label>
            @foreach (var tools in Model.ProjectTools)
            {
                    <div class="form-group">
                    <div class="form-check">
                               <label class="list-group-item">
                        <input class="form-check-input"
                           type="checkbox"
                           value="@tools.Id"
                           name="ToolsUsedChecked"
                           checked="@tools.IsChecked">
                            @tools.Name
                               </label>
                    </div>
                    </div>
            }
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>
