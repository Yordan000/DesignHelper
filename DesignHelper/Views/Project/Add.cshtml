@model ProjectAddViewModel


@{
    ViewBag.Title = "Add Project";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Title" class="form-label">Title</label>
                <input asp-for="@Model.Title" class="form-control" aria-required="true" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Author" class="form-label">Author</label>
                <input asp-for="@Model.Author" class="form-control" aria-required="true" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Location" class="form-label">Location</label>
                <input asp-for="@Model.Location" class="form-control" aria-required="true" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Area" class="form-label">Area</label>
                <input asp-for="@Model.Area" class="form-control" value="" />
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label">Description</label>
                <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ImageUrl" class="form-label">Image URL</label>
                <input asp-for="@Model.ImageUrl" class="form-control" aria-required="true" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Rating" class="form-label">Rating</label>
                <input asp-for="@Model.Rating" class="form-control" value="" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.CategoryId" class="form-label">Category</label>
                <select asp-for="@Model.CategoryId" class="form-control">
                    @foreach (var category in Model.ProjectCategories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.AwardId" class="form-label">Award</label>
                <select asp-for="@Model.AwardId" class="form-control">
                    @foreach (var award in Model.ProjectAwards)
                    {
                        <option value="@award.Id">@award.Name</option>
                    }
                </select>
                <span asp-validation-for="AwardId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="form-check">
                <label class="form-label">Tools used</label>
                @foreach (var tools in Model.ProjectTools)
                {
                    
                    <label class="list-group-item">
                        <input type="checkbox" value="true"/>
                        @tools.Name
                        
                    @*@Html.HiddenFor(t => tools.Id)
                    @Html.DisplayFor(tn => tools.Name)
                    @Html.CheckBoxFor(tn => tools.IsChecked)*@

                    </label>
                }
                </div>
            </div>
           
           @* <div class="mb-3">
                <label class="form-label">Tools used</label>
                @foreach (var tools in Model.ProjectTools)
                {
                    <label class="list-group-item">

                        <input class="form-check-input me-1" type="checkbox" value="">
                        @tools.Name
                    </label>
                }
                <span asp-validation-for="ToolsId" class="text-danger"></span>
            </div>*@

            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Add Project" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
                            <partial name="_ValidationScriptsPartial" />
}
